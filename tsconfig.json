{
  "compilerOptions": {
    "target": "ES2020",                // modern JS
    "module": "NodeNext",              // ✅ use Node’s native ESM loader
    "moduleResolution": "NodeNext",    // ✅ resolve .ts/.js correctly
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    

    "types": ["node", "dotenv"]        // ✅ include dotenv + node types
  },
  "include": ["src"]
}
