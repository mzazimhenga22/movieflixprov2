{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "declarationMap": false,
      "emitDeclarationOnly": false,
      "outDir": "lib",
      "rootDir": "src",
      "module": "ES2020",
      "target": "ES2020",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }
  